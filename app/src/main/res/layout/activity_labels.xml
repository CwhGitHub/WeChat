<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/label_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:background="@color/light_blue"
        android:id="@+id/barRelativeLayout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            style="@style/simple_back_button"
            android:textSize="15sp"
            android:text="@string/backToMain"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/labels_back"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Labels"
            style="@style/simple_back_button"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            style="@style/bottom_buttons"
            android:background="@drawable/cwh_blue_button_selector"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/add_label" />
    </RelativeLayout>


    <GridView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labels"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="0dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/label_list"
        android:padding="2dp"
        android:divider="@null"
        android:layout_margin="2dp" />
</LinearLayout>
