<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">        
        <shape>
            <!-- <gradient android:startColor="#d8ac6a" android:endColor="#d8ac6a"
                android:angle="90"/> -->
            <gradient android:startColor="#d27800" android:endColor="#d27800"
                android:angle="90"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">        
        <shape>
            <!-- <gradient android:startColor="#ffc27d" android:endColor="#ffc27d"
                android:angle="90"/> -->
            <gradient android:startColor="#ff9900" android:endColor="#ff9900"
                android:angle="90"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>
