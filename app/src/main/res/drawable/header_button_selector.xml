<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下的状态 -->
    <item android:state_enabled="true" android:state_pressed="true">
    	<shape>
    	    <gradient android:startColor="#bdd0e2" android:endColor="#dce8f3" android:angle="270" />
            <corners android:topLeftRadius="6dp" android:topRightRadius="6dp" android:bottomLeftRadius="6dp"
				android:bottomRightRadius="6dp" />
            <stroke android:width="1px"
        		android:color="#889db1" />
        </shape>
    </item>
    <!-- 选中的状态 -->
    <item android:state_enabled="true" android:state_focused="true">
    	<shape>
    	    <gradient android:startColor="#bdd0e2" android:endColor="#dce8f3" android:angle="270" />
            <corners android:topLeftRadius="6dp" android:topRightRadius="6dp" android:bottomLeftRadius="6dp"
				android:bottomRightRadius="6dp" />
            <stroke android:width="1px"
        		android:color="#889db1" />
        </shape>
    </item>
    <!-- 没操作的状态 -->
    <item>
        <shape>
            <gradient android:startColor="#dce8f3" android:endColor="#bdd0e2" android:angle="270" />
            <corners android:topLeftRadius="6dp" android:topRightRadius="6dp" android:bottomLeftRadius="6dp"
				android:bottomRightRadius="6dp" />
            <stroke android:width="1px"
        		android:color="#889db1" />
        </shape>
    </item>
</selector>
