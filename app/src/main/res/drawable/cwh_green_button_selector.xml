<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下的状态 -->
    <item android:state_enabled="true" android:state_pressed="true">
    	<shape>
    	    <gradient android:startColor="@color/cwh_orange_on" android:endColor="@color/cwh_orange_on" android:angle="270"/>
    	    <corners android:topLeftRadius="6dp"
				android:topRightRadius="6dp"
				android:bottomLeftRadius="6dp"
				android:bottomRightRadius="6dp" />
    	    
        </shape>
    </item>
    <item android:state_enabled="true" android:state_checked="true">
    	<shape>
    	    <gradient android:startColor="@color/cwh_orange_on" android:endColor="@color/cwh_orange_on" android:angle="270" />
    	    <corners android:topLeftRadius="6dp"
				android:topRightRadius="6dp"
				android:bottomLeftRadius="6dp"
				android:bottomRightRadius="6dp" />
    	   
        </shape>
    </item>
    <!-- 没操作的状态 -->
    <item>
        <shape>
            <gradient android:startColor="@color/cwh_green" android:endColor="@color/cwh_green" android:angle="270" />
            <corners android:topLeftRadius="6dp"
				android:topRightRadius="6dp"
				android:bottomLeftRadius="6dp"
				android:bottomRightRadius="6dp" />
           
        </shape>
    </item>
</selector>
   
