<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下的状态 -->
    <item android:state_enabled="true" android:state_pressed="true">
    	<shape>
    	    <gradient android:startColor="@color/light_dark_red" android:endColor="@color/light_dark_red" android:angle="270"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_checked="true">
    	<shape>
    	    <gradient android:startColor="@color/light_dark_red" android:endColor="@color/light_dark_red" android:angle="270" />
        </shape>
    </item>
    <!-- 没操作的状态 -->
    <item>
        <shape>
            <gradient android:startColor="@color/light_red" android:endColor="@color/light_red" android:angle="270" />
        </shape>
    </item>
</selector>
   
