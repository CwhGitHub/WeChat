<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下的状态 -->
    <item android:state_enabled="true" android:state_pressed="true">
    	<shape>
    	    <gradient android:startColor="#aac2d8" android:endColor="#9bb1c5" android:angle="270" />
            <stroke android:width="1px"
        		android:color="#7190ae" />
        </shape>
    </item>
    <!-- 选中的状态 -->
    <item android:state_enabled="true" android:state_focused="true">
    	<shape>
    	    <gradient android:startColor="#aac2d8" android:endColor="#9bb1c5" android:angle="270" />
            <stroke android:width="1px"
        		android:color="#7190ae" />
        </shape>
    </item>
    <!-- 没操作的状态 -->
    <item>
        <shape>
            <gradient android:startColor="@null" android:endColor="@null" android:angle="270" />
        </shape>
    </item>
</selector>
